<Window x:Class="Document.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Document"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="650">
    <StackPanel>
        <ScrollViewer Height="350">
            <StackPanel>
                <TextBlock Background="Silver" x:Name="txtBlock"/>
            </StackPanel>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal">
            <Button Background="Silver" x:Name="ButtonInfo" Click="Button_click1" Height="50" Width="150" >Больше информации</Button>
            <Button Background="Silver" x:Name="button2" Click="button_Click2"  Height="50" Width="100">Создать XML</Button>
        </StackPanel>
    </StackPanel>
</Window>
